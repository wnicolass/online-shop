<article class="product-item">
  <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
  <div class="product-item-content">
    <h2><%= product.title %></h2>
    <div class="product-item-actions">
      <% if (locals.isAdmin && locals.path.startsWith('/admin')) { %>
      <a href="/admin/edit/products/<%= product.id %>" class="btn btn-alt"
        >View & Edit</a
      >
      <button
        class="btn btn-alt"
        data-id="<%= product.id %>"
        data-csrfToken="<%= csrfToken %>"
      >
        Delete
      </button>
      <% } else { %>
      <a href="/products/<%= product.id %>" class="btn btn-alt">View Details</a>
      <% } %>
    </div>
  </div>
</article>
