<%- include('../../shared/includes/head.ejs', { pageTitle: 'Add New Product' }) %>
</head>
<body>
  <%- include('../../shared/includes/header.ejs') %>
  <main>
    <h1>Add new Product</h1>
    <form class="form" action="" method="POST">
      <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="title">
      </div>
      <div>
        <label for="image">Image</label>
        <input type="file" id="image" name="image" accept="image/png,image/jpg">
      </div>
      <div>
        <label for="summary">Summary</label>
        <input type="text" id="summary" name="summary">
      </div>
      <div>
        <label for="price">Price</label>
        <input type="number" id="price" min="0.01" step="0.01" name="price">
      </div>
      <div>
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="7"></textarea>
      </div>
      <div>
        <button type="reset" class="btn btn-alt">Reset</button>
        <button class="btn">Save</button>
      </div>
    </form>

  </main>
<%- include('../../shared/includes/footer.ejs') %>

